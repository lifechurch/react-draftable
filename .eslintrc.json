{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "SyntheticKeyboardEvent": "readonly",
        "InlineStyle": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "flowtype",
        "import"
    ],
    "settings": {
        "react": {
            "createClass": "createReactClass",
            "pragma": "React",
            "version": "16.8.6",
            "flowVersion": "0.98.1"
        }
    },
    "rules": {
        "react/require-default-props": 0,
        "max-len": "off",
        "no-useless-return": "off",
        "jsx-quotes": ["error","prefer-single"]
    }
}
