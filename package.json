{
  "name": "react-draftable",
  "version": "0.0.0-development",
  "description": "A simple, customizable rich text editor built on Draft.js",
  "main": "dist/react-draftable.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production parcel build ./src/index.js --out-dir ./dist --out-file react-draftable.js --target node",
    "dev": "parcel ./src/index.html",
    "flow": "flow",
    "lint": "eslint --ext .jsx,.js src/",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lifechurch/react-draftable.git"
  },
  "keywords": [
    "react",
    "draftjs",
    "contenteditable",
    "wysiwyg",
    "richtext"
  ],
  "author": "Michael Haglund <michael.haglund@life.church>",
  "license": "MIT",
  "dependencies": {
    "draft-js-export-html": "^1.3.3",
    "draft-js-export-markdown": "^1.3.3",
    "draft-js-import-html": "^1.3.3",
    "draft-js-import-markdown": "^1.3.3",
    "immutable": "^3.8.2"
  },
  "peerDependencies": {
    "draft-js": "x.10.x",
    "react": "16.x.x",
    "react-dom": "16.x.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.8.0",
    "commitizen": "^3.1.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "2.1.0",
    "draft-js": "^0.10.5",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.9.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "flow-bin": "^0.98.1",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "parcel-bundler": "^1.12.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "semantic-release": "^15.13.12",
    "semantic-release-cli": "^5.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
